<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.syncup.controllers.LoginController">
   <center>
      <VBox alignment="CENTER" maxWidth="400.0" prefHeight="600.0" prefWidth="400.0" spacing="30.0" styleClass="login-container">
         <padding>
            <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
         </padding>
         
         <!-- Logo y Título -->
         <VBox alignment="CENTER" spacing="15.0">
            <ImageView fx:id="logoImageView" fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
               <!-- Logo se cargará desde el código -->
            </ImageView>
<!--            Titulo de la aplicación-->
            <Label styleClass="app-title" text="Spoty">
               <font>
                  <Font name="System Bold" size="32.0" />
               </font>
            </Label>
            
            <Label styleClass="app-subtitle" text="Motor de Recomendaciones Musicales">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
         </VBox>
         
         <!-- Formulario de Login -->
         <VBox spacing="20.0">
            <Label styleClass="section-title" text="Iniciar Sesión">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            
            <VBox spacing="8.0">
               <Label styleClass="field-label" text="Usuario" />
               <TextField fx:id="usernameField" prefHeight="40.0" promptText="Ingresa tu nombre de usuario" styleClass="login-field" />
            </VBox>
            
            <VBox spacing="8.0">
               <Label styleClass="field-label" text="Contraseña" />
               <PasswordField fx:id="passwordField" prefHeight="40.0" promptText="Ingresa tu contraseña" styleClass="login-field" />
            </VBox>
            
            <!-- Botón de Login -->
            <Button fx:id="loginButton" mnemonicParsing="false" onAction="#handleLogin" prefHeight="45.0" prefWidth="300.0" styleClass="login-button" text="Iniciar Sesión">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
            
            <!-- Mensaje de error -->
            <Label fx:id="errorLabel" styleClass="error-message" text="" visible="false" wrapText="true" />
         </VBox>
         
         <!-- Sección de Registro -->
         <Separator />
         
         <VBox alignment="CENTER" spacing="15.0">
            <Label styleClass="section-subtitle" text="¿No tienes cuenta?">
               <font>
                  <Font size="13.0" />
               </font>
            </Label>
            
            <Button fx:id="registerButton" mnemonicParsing="false" onAction="#handleRegister" prefHeight="40.0" prefWidth="250.0" styleClass="register-button" text="Crear Cuenta Nueva">
               <font>
                  <Font size="13.0" />
               </font>
            </Button>
         </VBox>
      </VBox>
   </center>
   
   <!-- Fondo con gradiente -->
   <bottom>
      <Region prefHeight="0.0" styleClass="login-background" />
   </bottom>
</BorderPane>