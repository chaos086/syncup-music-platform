<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.syncup.controllers.UserDashboardController">
   <top>
      <!-- Header del Usuario -->
      <VBox styleClass="dashboard-header" spacing="10">
         <padding>
            <Insets bottom="15" left="20" right="20" top="15" />
         </padding>
         
         <Label fx:id="welcomeLabel" styleClass="dashboard-title" text="¡Bienvenido!">
            <font>
               <Font name="System Bold" size="24.0" />
            </font>
         </Label>
         
         <Label fx:id="userStatsLabel" styleClass="dashboard-subtitle" text="">
            <font>
               <Font size="14.0" />
            </font>
         </Label>
      </VBox>
   </top>
   
   <center>
      <!-- Contenido Principal -->
      <VBox spacing="20">
         <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
         </padding>
         
         <!-- Sección de Búsqueda -->
         <VBox spacing="10">
            <Label styleClass="section-title" text="Explorar Música">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            
            <HBox spacing="10">
               <TextField fx:id="searchField" prefWidth="300.0" promptText="Buscar por título, artista o género..." />
               <Button fx:id="searchButton" onAction="#handleSearch" styleClass="primary-button" text="Buscar" />
               <Button fx:id="generateDiscoveryButton" onAction="#handleGenerateDiscovery" styleClass="secondary-button" text="Descubrimiento Semanal" />
            </HBox>
         </VBox>
         
         <!-- Tabla de Canciones -->
         <VBox spacing="10" VBox.vgrow="ALWAYS">
            <HBox>
               <Label styleClass="section-title" text="Catálogo Musical">
                  <font>
                     <Font name="System Bold" size="16.0" />
                  </font>
               </Label>
               <Region HBox.hgrow="ALWAYS" />
               <Button fx:id="addToFavoritesButton" onAction="#handleAddToFavorites" styleClass="favorite-button" text="♥ Agregar a Favoritos" />
            </HBox>
            
            <TableView fx:id="songsTable" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="titleColumn" prefWidth="250.0" text="Título" />
                  <TableColumn fx:id="artistColumn" prefWidth="200.0" text="Artista" />
                  <TableColumn fx:id="genreColumn" prefWidth="150.0" text="Género" />
                  <TableColumn fx:id="yearColumn" prefWidth="100.0" text="Año" />
               </columns>
            </TableView>
         </VBox>
      </VBox>
   </center>
   
   <bottom>
      <!-- Barra de Estado -->
      <HBox styleClass="status-bar" alignment="CENTER_LEFT" spacing="10">
         <padding>
            <Insets bottom="10" left="20" right="20" top="10" />
         </padding>
         
         <Label fx:id="statusLabel" text="Listo" />
         <Region HBox.hgrow="ALWAYS" />
         <ProgressIndicator fx:id="loadingIndicator" maxHeight="20.0" maxWidth="20.0" visible="false" />
      </HBox>
   </center>
</BorderPane>